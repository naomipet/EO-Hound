{{> header }}

<div class="containerBox">
    <div class="row">
        <div class="col-8">
            <h4 class="titleStat">Statistics for Granule <strong>AAAA</strong> - Dates: <span id="dateStart">Date</span> to <span id="dateEnd">Date</span></h4>
        </div>
        <div class="col-4">
            <button id="buttonColor" class="btn btn-lg btn-primary buttonPosition">Download Metadata</button>
        </div>
    </div>
    <div class="row">
        <div class="col-8">
            <h4 class="titleStat">Orbit Direction: <strong>Ascending</strong></h4>
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            <div id="images" class="square">
                <div class="row">
                    <div class="col-4">
                        <i class="fas fa-camera-retro iconBig"></i>
                    </div>
                    <div class="col-8">
                        <div class="resultSquare">
                            <p>510</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <h4 class="titleSquare">Number of Images</h4>
                    </div>
                </div>
                </div>
            </div>
       
        <div class="col-3">
            <div id="areaOfInt" class="square">
                <div class="row">
                    <div class="col-4">
                        <i class="fas fa-draw-polygon iconBig"></i>
                    </div>
                    <div class="col-8">
                        <div class="resultSquare">
                            <p>100,50 kmq</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <h4 class="titleSquare">Buonding Box Coverage</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div id="cloud" class="square">
                <div class="row">
                    <div class="col-4">
                        <i class="fas fa-cloud iconBig"></i>
                    </div>
                    <div class="col-8">
                        <div class="resultSquare">
                            <p>50%</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <h4 class="titleSquare">Average Cloud Cover</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3">
            <div id="revTime" class="square">
                <div class="row">
                    <div class="col-4">
                        <i class="fas fa-satellite iconBig"></i>
                    </div>
                    <div class="col-8">
                        <div class="resultSquare">
                            <p>5 Day</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <h4 class="titleSquare">Revisiting Time</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <h4 class="titleStat">Clouds Coverage</h4>
            <div id="containerChart">  
                <canvas id="myChart"></canvas>
        </div>
    </div>
</div>     

    <script>

    var ctx = document.getElementById('myChart').getContext('2d');
    var chart = new Chart(ctx, {
    // The type of chart we want to create
    type: 'line',

    // The data for our dataset
    data: {
        labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July'],
        datasets: [{
            label: 'My First dataset',
            backgroundColor: 'rgba(47,91,183,0.3)',
            borderColor: 'rgb(47, 91, 183)',
            data: [0, 10, 5, 2, 20, 30, 45]
        }]
    },
    // Configuration options go here
    options: {
        maintainAspectRatio: false
    }
});

</script>

